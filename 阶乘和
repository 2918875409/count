#include<stdio.h>
int main()
{
	int a;
	int ret=1;
	int n=0;
	int sum=0;
	scanf("%d",&n);
	printf("请输入一个数字\nn=");
	for(a=1;a<=n;a++)
	{
	ret=ret*a;
	sum=sum+ret;
	}
	printf("该数字的阶乘和为%d",sum);
	return 0;
} 

